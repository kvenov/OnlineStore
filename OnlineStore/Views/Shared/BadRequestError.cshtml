@{
	ViewData["Title"] = "BadRequestError";
}

@section Styles {
	<link rel="stylesheet" href="~/css/errors.css" />
}

<div class="error-400-container">
	<div class="error-400-icon">⚠️</div>
	<h1 class="error-400-code">400</h1>
	<p class="error-400-title">Bad Request</p>
	<p class="error-400-description">
		The server couldn’t understand your request.<br>
		Please check your input and try again.
	</p>
	<div class="error-400-actions">
		<a href="/Home" class="error-400-home">Go Home</a>
		<a href="javascript:history.back()" class="error-400-back">Go Back</a>
	</div>
</div>
