@using OnlineStore.Web.ViewModels.Admin.Product
@model IEnumerable<AllProductsViewModel>

@{
    ViewData["Title"] = "All Products";
}

<h2 class="mb-4">All Products</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="@product.ImageUrl" class="card-img-top object-fit-cover" style="height: 200px;" alt="@product.Name">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted mb-1">
                        Category: <strong>@product.Category</strong><br />
                        @if (!string.IsNullOrEmpty(product.Brand))
                        {
                            <span>Brand: <strong>@product.Brand</strong></span>
                        }
                    </p>
                    <p class="card-text mt-auto">
                        <span class="fw-bold text-success">@product.Price</span>
                        @if (!string.IsNullOrEmpty(product.DiscountPrice))
                        {
                            <span class="text-muted text-decoration-line-through ms-2">@product.DiscountPrice</span>
                        }
                    </p>
                    <div class="d-flex justify-content-between gap-2 mt-3">
                        <a asp-area="Admin" asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" asp-route-source="All"
                                class="btn btn-sm btn-outline-primary flex-fill text-nowrap">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-area="Admin" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger flex-fill text-nowrap">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                        <a asp-area="Admin" asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary flex-fill text-nowrap">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
