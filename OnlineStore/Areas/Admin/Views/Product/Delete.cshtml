@model ProductDetailsForDeleteViewModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-danger text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
                    </h2>

                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>

                    <h4 class="text-center">@Model.Name</h4>
                    <p class="text-muted text-center mb-3">@Model.Description</p>

                    <div class="text-center mb-4">
                        <span class="badge bg-primary me-2">@Model.Category</span>
                        <span class="badge bg-secondary">@Model.Brand</span>
                    </div>

                    <form asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" method="post" class="text-center">
                        @Html.AntiForgeryToken()

                        <p class="fw-bold text-danger mb-4">
                            Are you sure you want to permanently delete this product? This action cannot be undone.
                        </p>

                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="bi bi-trash-fill me-1"></i> Delete
                        </button>

                        <a asp-action="All" asp-controller="Product" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
