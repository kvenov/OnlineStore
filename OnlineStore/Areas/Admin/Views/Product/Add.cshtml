@model AddProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<h2 class="mb-4">Add New Product</h2>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Add" method="post">
            <div class="row g-3">

                <!-- Product Basics -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Classic Leather Jacket" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter detailed product description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Pricing -->
                <div class="col-md-4">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="e.g. 49.99" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="DiscountPrice" class="form-label">Discount Price</label>
                    <input asp-for="DiscountPrice" class="form-control" placeholder="e.g. 39.99 (optional)" />
                    <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                </div>

                <div class="col-md-6 d-flex align-items-center mt-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" role="switch" />
                        <label class="form-check-label ms-2" asp-for="IsActive">Product Active</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger ms-3"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="AverageRating" class="form-label"></label>
                    <input asp-for="AverageRating" class="form-control" type="number" step="0.1" min="0" max="5" />
                    <span asp-validation-for="AverageRating" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TotalRatings" class="form-label"></label>
                    <input asp-for="TotalRatings" class="form-control" type="number" min="0" />
                    <span asp-validation-for="TotalRatings" class="text-danger"></span>
                </div>


                <!-- Dropdowns -->
                <div class="col-md-6">sacac
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                        <option disabled selected>Choose a category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BrandId" class="form-label">Brand</label>
                    <select asp-for="BrandId" asp-items="Model.Brands" class="form-select">
                        <option value="" selected>Choose a brand(optional)</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                <!-- Product Details -->
                <h4 class="mt-4">Product Details</h4>

                <div class="col-md-4">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Color" class="form-label">Color</label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <input asp-for="Gender" class="form-control" placeholder="e.g. Unisex / Men / Women" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SizeGuideUrl" class="form-label">Size Guide URL</label>
                    <input asp-for="SizeGuideUrl" class="form-control" placeholder="https://..." />
					<span asp-validation-for="SizeGuideUrl" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CountryOfOrigin" class="form-label">Country of Origin</label>
                    <input asp-for="CountryOfOrigin" class="form-control" />
					<span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="CareInstructions" class="form-label">Care Instructions</label>
                    <textarea asp-for="CareInstructions" rows="2" class="form-control" placeholder="e.g. Hand wash only, do not tumble dry..."></textarea>
					<span asp-validation-for="CareInstructions" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Weight" class="form-label">Weight (kg)</label>
                    <input asp-for="Weight" class="form-control" />
					<span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Fit" class="form-label">Fit</label>
                    <input asp-for="Fit" class="form-control" placeholder="e.g. Slim / Regular" />
					<span asp-validation-for="Fit" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Style" class="form-label">Style</label>
                    <input asp-for="Style" class="form-control" placeholder="e.g. Casual / Formal" />
					<span asp-validation-for="Style" class="text-danger"></span>
                </div>

            </div>

            <!-- Submit Button -->
            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-plus-circle"></i> Add Product
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
